{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
